#!/bin/bash

# List of Pokémon
POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
PIDS=()

# Function to fetch Pokémon data
fetch_pokemon() {
    local pokemon=$1
    echo "Fetching data for $pokemon..."

    STATUS_CODE=$(curl -s -o "${pokemon}.json" -w "%{http_code}" "https://pokeapi.co/api/v2/pokemon/$pokemon")

    if [ "$STATUS_CODE" -eq 200 ]; then
        echo "Saved data to ${pokemon}.json"
    else
        echo "Failed to fetch data for $pokemon (HTTP $STATUS_CODE)" >> errors.txt
        rm -f "${pokemon}.json"
    fi
}

# Start all fetches in parallel and store PIDs
for pokemon in "${POKEMON_LIST[@]}"; do
    fetch_pokemon "$pokemon" &
    PIDS+=($!)
done

# Wait for all processes, killing any that hang too long
for pid in "${PIDS[@]}"; do
    wait "$pid" || {
        echo "Process $pid failed, killing..."
        kill "$pid" 2>/dev/null
    }
done

echo "All Pokémon data fetched!"
