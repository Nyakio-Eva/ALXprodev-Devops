#!/bin/bash

# Output CSV file
REPORT_FILE="pokemon_report.csv"

# CSV header
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Loop through each JSON file
for file in *.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')   # Capitalize name
    height=$(jq -r '.height' "$file" | awk '{printf "%.1f", $1 / 10}')  # Convert dm to m
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f", $1 / 10}')  # Convert hg to kg
    echo "$name,$height,$weight" >> "$REPORT_FILE"
done

echo "CSV Report generated at: $REPORT_FILE"
echo ""

# Display the CSV content
cat "$REPORT_FILE"
echo ""

# Calculate averages
awk -F',' 'NR>1 {sum_h+=$2; sum_w+=$3; count++} 
END {
    printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", sum_h/count, sum_w/count
}' "$REPORT_FILE"
